---
import type { NavConfig } from '@/config';

interface Props {
    navConfig: NavConfig
}
const { navConfig } = Astro.props;
---

<nav
	class="hidden lg:flex items-center transition-opacity duration-300"
	id="desktop-nav"
>
	<div
		class="flex items-center space-x-1 bg-gray-50/80 dark:bg-gray-900/95 rounded-full p-1 backdrop-blur-sm"
	>
		{
			navConfig.items.map((item) => (
				<a
					href={item.href}
					class="nav-link group relative px-4 py-2.5 rounded-full text-sm font-medium transition-all duration-200 hover:bg-white dark:hover:bg-gray-700 text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white hover:shadow-sm"
				>
					<span class="relative z-10">{item.label}</span>
					<div class="absolute inset-0 rounded-full bg-linear-to-r from-primary/30 to-accent/40 opacity-0 group-hover:opacity-100 transition-opacity duration-200" />
				</a>
			))
		}
	</div>
</nav>
