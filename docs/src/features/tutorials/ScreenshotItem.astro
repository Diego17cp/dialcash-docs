---
const { screenshot, index } = Astro.props;
---
<div class="group relative">
	<div
		class="absolute -top-3 -left-3 w-8 h-8 rounded-full bg-linear-to-br from-blue-600 to-orange-500 flex items-center justify-center text-white font-bold text-sm shadow-lg z-10"
	>
		{index + 1}
	</div>
	<div
		class="relative bg-white dark:bg-gray-800 rounded-2xl p-3 shadow-lg hover:shadow-2xl transition-all duration-300 group-hover:scale-105"
	>
		<div
			class="rounded-xl overflow-hidden bg-gray-100 dark:bg-gray-900 aspect-9/16"
		>
			<img
				src={screenshot.src}
				alt={screenshot.alt}
				class="w-full h-full object-cover object-top"
				loading="lazy"
			/>
		</div>
		<p
			class="mt-3 text-sm font-body text-gray-600 dark:text-gray-300 text-center"
		>
			{screenshot.alt}
		</p>
	</div>
</div>
