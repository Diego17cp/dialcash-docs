---
import { getCollection } from "astro:content";

const tutorials = await getCollection("tutorials");
const sortedTutorials = tutorials.sort((a, b) => a.data.order - b.data.order);

import TutorialItem from "./TutorialItem.astro"

---

<section class="relative py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <span class="inline-block px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full text-sm font-semibold mb-4">
                Step by Step
            </span>
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-titles font-bold text-gray-900 dark:text-white mb-6">
                Learn
                <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-orange-500 dark:from-blue-400 dark:to-accent">
                    Dialcash
                </span>
            </h2>
            <p class="text-lg sm:text-xl font-body text-gray-600 dark:text-gray-300">
                Master Dialcash with our comprehensive tutorials and guides
            </p>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {sortedTutorials.map((tutorial) => {                
                return (
                    <TutorialItem tutorial={tutorial} />
                );
            })}
        </div>
    </div>
</section>