---
import { GITHUB_LINKS, PROJECT } from "@/constants";
import { Icon } from "astro-icon/components";
---

<section class="relative pt-20 pb-12 px-4 sm:px-6 lg:px-8 overflow-hidden">
	<div class="absolute inset-0 pointer-events-none overflow-hidden">
		<div
			class="absolute top-20 -left-20 w-96 h-96 bg-blue-400/20 rounded-full blur-3xl dark:bg-blue-600/10"
		>
		</div>
		<div
			class="absolute bottom-20 -right-20 size-125 bg-orange-400/20 rounded-full blur-3xl dark:bg-orange-600/10"
		>
		</div>
		<div
			class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 size-150 bg-linear-to-br from-blue-100/30 to-orange-100/30 dark:from-blue-900/10 dark:to-orange-900/10 rounded-full blur-3xl"
		>
		</div>
	</div>

	<div class="relative max-w-5xl mx-auto">
		<div class="text-center mb-12">
			<span
				class="inline-block px-4 py-2 mb-6 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full text-sm font-semibold"
			>
				<Icon
					name="tabler-download"
					class="w-4 h-4 inline-block mr-1"
				/>
				Free Download Available
			</span>
			<h1
				class="text-4xl sm:text-5xl lg:text-6xl font-titles font-bold text-gray-900 dark:text-white mb-6"
			>
				Download Dialcash
				<span
					class="block text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-orange-500 dark:from-blue-400 dark:to-orange-400"
				>
					for Android
				</span>
			</h1>
			<p
				class="text-xl sm:text-2xl font-body text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-10"
			>
				Free expense tracking app to control your spending and income
				directly from your phone
			</p>
			<div
				class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12"
			>
				<a
					href={`${GITHUB_LINKS.RELEASES}/latest`}
					rel="noopener noreferrer"
					target="_blank"
					class="group relative inline-flex items-center justify-center gap-3 px-10 py-5 text-xl font-bold text-white bg-linear-to-r from-blue-600 to-orange-500 hover:from-blue-700 hover:to-accent rounded-full shadow-2xl hover:shadow-blue-500/50 dark:hover:shadow-blue-600/30 transition-all duration-300 transform hover:scale-105 min-w-70"
				>
					<div
						class="absolute inset-0 bg-linear-to-r from-blue-600 to-accent rounded-full blur-xl opacity-50 group-hover:opacity-75 transition-opacity -z-10"
					>
					</div>
					<Icon name="tabler-download" class="w-7 h-7" />
					<span>Download APK</span>
					<Icon
						name="right-arrow"
						class="w-6 h-6 group-hover:translate-x-1 transition-transform"
					/>
				</a>
				<a
					href="#how-to-install"
					class="group inline-flex items-center justify-center gap-2 px-10 py-5 text-base font-semibold text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-full shadow-md hover:shadow-lg transition-all duration-300 border border-gray-200 dark:border-gray-700 transform hover:scale-105"
				>
					<Icon name="tabler-info-circle" class="w-5 h-5" />
					<span>How to Install</span>
					<Icon
						name="tabler-arrow-down"
						class="w-4 h-4 group-hover:translate-y-0.5 transition-transform"
					/>
				</a>
			</div>
			<div class="flex flex-wrap justify-center gap-4 sm:gap-6">
				<div
					class="flex items-center gap-2 px-4 py-2 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-full border border-gray-200 dark:border-gray-700"
				>
					<Icon
						name="tabler-brand-android"
						class="w-5 h-5 text-green-600 dark:text-green-400"
					/>
					<span
						class="text-sm font-semibold text-gray-700 dark:text-gray-300"
						>Android Only</span
					>
				</div>
				<div
					class="flex items-center gap-2 px-4 py-2 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-full border border-gray-200 dark:border-gray-700"
				>
					<Icon
						name="tabler-free-rights"
						class="w-5 h-5 text-blue-600 dark:text-blue-400"
					/>
					<span
						class="text-sm font-semibold text-gray-700 dark:text-gray-300"
						>100% Free</span
					>
				</div>
				<div
					class="flex items-center gap-2 px-4 py-2 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-full border border-gray-200 dark:border-gray-700"
				>
					<Icon
						name="tabler-add-off"
						class="w-5 h-5 text-orange-600 dark:text-orange-400"
					/>
					<span
						class="text-sm font-semibold text-gray-700 dark:text-gray-300"
						>No Ads</span
					>
				</div>
				<div
					class="flex items-center gap-2 px-4 py-2 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-full border border-gray-200 dark:border-gray-700"
				>
					<Icon
						name="tabler-wifi-off"
						class="w-5 h-5 text-purple-600 dark:text-purple-400"
					/>
					<span
						class="text-sm font-semibold text-gray-700 dark:text-gray-300"
						>Works Offline</span
					>
				</div>
			</div>
		</div>
	</div>
</section>
