---
import { Icon } from "astro-icon/components";
import { getCategoryIcon, getCategoryClass, formatDate } from "./utils";

const { post } = Astro.props;
const slug = post.slug;
const { title, description, portrait, category, publishedAt } = post.data;

---

<a 
    href={`/blog/posts/${slug}`}
    class="group relative block"
>
    <div class="absolute inset-0 bg-linear-to-br from-blue-500/20 to-orange-500/20 dark:from-blue-600/20 dark:to-orange-600/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
    <article class="relative h-full bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-3xl overflow-hidden border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 transition-all duration-300 hover:shadow-2xl">
        <div class="flex flex-col sm:flex-row gap-6 p-6">
            <div class="relative shrink-0 w-full sm:w-48 aspect-video sm:aspect-square overflow-hidden rounded-2xl bg-gray-100 dark:bg-gray-900">
                <img
                    src={portrait}
                    alt={title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    transition:name={`post-${slug}`}
                />
                <div class="absolute inset-0 bg-linear-to-t from-black/60 via-transparent to-transparent"></div>
                <div class="absolute top-3 left-3">
                    <span class={`inline-flex items-center gap-1.5 px-3 py-1 text-xs font-semibold rounded-full capitalize ${getCategoryClass(category)} backdrop-blur-sm`}>
                        <Icon name={getCategoryIcon(category)} class="w-3.5 h-3.5" />
                        {category}
                    </span>
                </div>
            </div>
            <div class="flex-1 flex flex-col justify-center">
                <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-3">
                    <Icon name="tabler-calendar-event" class="w-4 h-4" />
                    <time datetime={publishedAt.toISOString()}>
                        {formatDate(publishedAt)}
                    </time>
                </div>
                <h3 class="text-xl sm:text-2xl font-titles font-bold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-2">
                    {title}
                </h3>
                <p class="text-sm sm:text-base font-body text-gray-600 dark:text-gray-300 leading-relaxed mb-4 line-clamp-2 sm:line-clamp-3">
                    {description}
                </p>
                <div class="flex items-center gap-2 text-blue-600 dark:text-blue-400 font-semibold text-sm">
                    <span>Read article</span>
                    <Icon name="right-arrow" class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
                </div>
            </div>
        </div>
    </article>
</a>