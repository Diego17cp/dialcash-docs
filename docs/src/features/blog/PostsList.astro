---
import { getCollection } from "astro:content";
import PostItem from "./PostItem.astro";

import { Icon } from "astro-icon/components";

const posts = await getCollection("posts");
const sortedPosts = posts.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());
---

<section class="relative py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <span class="inline-block px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full text-sm font-semibold mb-4">
                Latest Updates
            </span>
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-titles font-bold text-gray-900 dark:text-white mb-6">
                Blog &
                <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-orange-500 dark:from-blue-400 dark:to-accent">
                    News
                </span>
            </h2>
            <p class="text-lg sm:text-xl font-body text-gray-600 dark:text-gray-300">
                Stay up to date with the latest Dialcash releases, features, and announcements
            </p>
        </div>
        <div class="space-y-6">
            {sortedPosts.map((post) => (
                <PostItem post={post} />
            ))}
        </div>
        {sortedPosts.length === 0 && (
            <div class="text-center py-16">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 dark:bg-gray-800 mb-4">
                    <Icon name="tabler-article-off" class="w-8 h-8 text-gray-400 dark:text-gray-500" />
                </div>
                <h3 class="text-xl font-titles font-bold text-gray-900 dark:text-white mb-2">
                    No posts yet
                </h3>
                <p class="text-gray-600 dark:text-gray-400 font-body">
                    Check back soon for updates and announcements
                </p>
            </div>
        )}
    </div>
</section>