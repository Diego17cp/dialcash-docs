---
import { Icon } from "astro-icon/components";

const useCases = [
    {
        icon: "school",
        title: "Students",
        description: "Track your allowance, part-time job income, and daily expenses. Stay on budget without the stress.",
        highlight: "Perfect for managing student life finances"
    },
    {
        icon: "tabler-briefcase",
        title: "Freelancers",
        description: "Monitor irregular income and business expenses. Know exactly what you're making and spending each month.",
        highlight: "Ideal for variable income tracking"
    },
    {
        icon: "tabler-pig-money",
        title: "Savers",
        description: "See where your money goes and find opportunities to save. Make your financial goals a reality.",
        highlight: "Great for building savings habits"
    },
    {
        icon: "tabler-building-store",
        title: "Small Business Owners",
        description: "Keep personal and business expenses organized. Simple tracking without complicated accounting software.",
        highlight: "Easy business expense management"
    }
];
---

<section class="relative py-20 px-4 sm:px-6 lg:px-8 bg-linear-to-b from-gray-50/50 to-transparent dark:from-gray-900/50">
    <div class="max-w-7xl mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <span class="inline-block px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full text-sm font-semibold mb-4">
                For Everyone
            </span>
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-titles font-bold text-gray-900 dark:text-white mb-6">
                Who is
                <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-orange-500 dark:from-blue-400 dark:to-accent">
                    Dialcash for?
                </span>
            </h2>
            <p class="text-lg sm:text-xl font-body text-gray-600 dark:text-gray-300">
                Whether you're just starting out or managing multiple income streams, Dialcash adapts to your needs
            </p>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-20">
            {useCases.map((useCase, index) => (
                <div 
                    class="group relative"
                    style={`animation-delay: ${index * 100}ms`}
                >
                    <div class="absolute inset-0 bg-linear-to-br from-blue-500/10 to-orange-500/10 dark:from-blue-600/10 dark:to-accent/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="relative h-full bg-white dark:bg-gray-800 rounded-2xl p-6 border border-gray-200 dark:border-gray-700 group-hover:border-blue-300 dark:group-hover:border-blue-600 transition-all duration-300 group-hover:shadow-xl">
                        <div class="mb-6">
                            <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-linear-to-br from-blue-500 to-orange-500 dark:from-blue-600 dark:to-accent shadow-lg group-hover:scale-110 transition-transform duration-300">
                                <Icon name={useCase.icon} class="w-7 h-7 text-white" />
                            </div>
                        </div>
                        <h3 class="text-xl font-titles font-bold text-gray-900 dark:text-white mb-3">
                            {useCase.title}
                        </h3>
                        <p class="text-gray-600 dark:text-gray-300 font-body text-sm leading-relaxed mb-4">
                            {useCase.description}
                        </p>
                        <div class="flex items-center gap-2 text-xs font-semibold text-blue-600 dark:text-blue-400">
                            <Icon name="tabler-check" class="w-4 h-4" />
                            <span>{useCase.highlight}</span>
                        </div>
                    </div>
                </div>
            ))}
        </div>
        <div class="text-center">
            <p class="text-xl font-body text-gray-600 dark:text-gray-300 mb-2">
                Can't find yourself here?
            </p>
            <p class="text-lg font-body text-gray-500 dark:text-gray-400">
                If you handle money, <span class="font-semibold text-blue-600 dark:text-blue-400">Dialcash is for you</span>
            </p>
        </div>
    </div>
</section>