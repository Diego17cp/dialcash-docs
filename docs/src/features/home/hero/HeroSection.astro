---
import HeroInfo from "./HeroInfo.astro";
import PhoneMockup from "./PhoneMockup.astro";
import dashboardScreenshot from "@/assets/screenshots/dashboard.webp";
---

<section class="relative min-h-screen flex items-center justify-center py-20 px-4 sm:px-6 lg:px-8 overflow-hidden">
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 -left-20 w-72 h-72 bg-blue-400/20 rounded-full blur-3xl dark:bg-blue-600/10"></div>
        <div class="absolute bottom-20 -right-20 w-96 h-96 bg-orange-400/20 rounded-full blur-3xl dark:bg-orange-600/10"></div>
    </div>
    <div class="relative max-w-7xl mx-auto w-full">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
                <HeroInfo />
            </div>
            <div class="flex justify-center lg:justify-end">
                <div class="transform hover:scale-105 transition-transform duration-500">
                    <PhoneMockup screenshot={dashboardScreenshot.src} alt="DialCash Dashboard" />
                </div>
            </div>
        </div>
    </div>
</section>